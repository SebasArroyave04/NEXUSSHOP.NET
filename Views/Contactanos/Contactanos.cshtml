@model ContactanosModel

@{
    Layout = null;
    ViewData["TITLE"] = "Página de Productos";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="MenuUsuario" asp-controller="Home">NEXUSHOP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offc0anvasNavbarLabel">Menú</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </nav>


</head>

<style>
    body {
        background-image: url("/img/pp.jpg");
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<body class="fondo-imagen text-black d-flex justify-content-center align-items-center">
    <div class="bg-white p-5 rounded-5 shadow" style="width: 30rem;">
        <form asp-action="enviarcontacto" asp-controller="Contactanos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-end">
                <div class="col"></div>
                    <div class="text-dark text-center fs-1 fw-bold">Contactacnos</div>
                    
                    <div class="mb-3 fw-bold">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" asp-for="Nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3 fw-bold">

                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" class="form-control " asp-for="Correo" placeholder="correo" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="m-3 fw-bold">
                        <label for="text-center">Mensaje</label>
                        <textarea class="form-control" name="mensaje" rows="6" cols="100" asp-for="Mensaje"></textarea>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                    </div>

                    <div class="container fs-1 mt-4 d-flex justify-content-around">
                       <input class="btn btn-outline-success" type="submit" value="Enviar">
                       <input class="btn btn-outline-danger" type="button" value="Salir" onclick="window.history.back();">
                    </div>
                
                <div class="col"></div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>