@model RegistrarUsuario

@{
    Layout = null;
    ViewData["TITLE"] = "HOME PAGE";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1)
        }

        body {
            background-image: url("/img/pp.jpg");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>

</head>
<body class="body">
    <div class="container mt-5">
        <h2>Registro de Usuario</h2>
        <form asp-action="Registro" asp-controller="Usuario" method="post" class="container">
            <div class="mb-3">
                <label asp-for="Identificacion" class="form-label">Identificación</label>
                <input asp-for="Identificacion" type="text" class="form-control" required>
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nombres" class="form-label">Nombres</label>
                <input asp-for="Nombres" type="text" class="form-control" required>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <label asp-for="Apellidos" class="form-label">Apellidos</label>
                <input asp-for="Apellidos" type="text" class="form-control" required>
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-section">
                <label asp-for="FNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="FNacimiento" type="date" class="form-control" max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")">
                <span asp-validation-for="FNacimiento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Sexo" class="form-label">Sexo</label>
                <span asp-validation-for="SSexo" class="text-danger"></span>
                <select asp-items="Html.GetEnumSelectList<Tiposexo>()" asp-for ="SSexo" class="form-select" required> </select>
            </div>
            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                <input asp-for="Correo" type="email" class="form-control" required>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control" required>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CContrasena" class="form-label">Confirmar Contraseña</label>
                <input asp-for="CContrasena" type="password" class="form-control" required>
                <span asp-validation-for="CContrasena" class="text-danger"></span>
            </div>
            <div class="btn-container mt-4">
                <button type="submit" class="btn btn-outline-success">Guardar</button>
            </div>
        </form>

        <form asp-action="Login" asp-controller="Home" method="post">
        <div class="btn-container mt-4">
            <button type="submit" class="btn btn-outline-primary">Volver</button>
        </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
