@{
    Layout = null;
    ViewData["TITLE"] = "HOME PAGE";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="MenuUsuario" asp-controller="Home">NEXUSHOP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offc0anvasNavbarLabel">Menú</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="d-grid">
                            <a class="btn" aria-current="page" asp-action="Productos" asp-controller="Home">Productos</a>
                        </li>
                        <br />
                        <div class="d-grid">
                            <a class="btn" aria-current="page" asp-action="Contactanos" asp-controller="Contactanos">Contactanos</a>
                        </div>
                        <br />
                        <div class="d-grid">
                            <a class="btn" aria-current="page" asp-action="Proveedores" asp-controller="Proveedores">Proveedores</a>
                        </div>
                        <div class="d-grid">
                            <a class="btn" aria-current="page" asp-action="Compras" asp-controller="Home">Compras</a>
                        </div>
                    </ul>
                </div>
            </div>
        </div>

        <div class="dropdown">
            <button class="btn btn-outline dropdown-toggle m-3" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                PDF
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li>
                    <a class="dropdown-item" aria-current="page" asp-action="ListadoContactosPdf" asp-controller="Cpdf" target="_blank">Contactos</a>
                </li>
                <li>
                    <a class="dropdown-item" aria-current="page" asp-action="ListadoProductosPdf" asp-controller="PPDF" target="_blank">Productos</a>
                </li>
                <li>
                    <a class="dropdown-item" aria-current="page" asp-action="ListadoProveedoresPdf" asp-controller="PrPDF" target="_blank">Proveedores</a>
                </li>
                <li>
                    <a class="dropdown-item" aria-current="page" asp-action="ListadoUsuarioPdf" asp-controller="UPDF" target="_blank">Usuario</a>
                </li>
            </ul>
        </div>
    </nav>


</head>

<style>
    body {
        background-image: url("/img/pp.jpg");
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>


<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>