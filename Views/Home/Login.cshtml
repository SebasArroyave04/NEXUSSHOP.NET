@model LoginUsuario

@{
    Layout = null;
    ViewData["TITLE"] = "HOME PAGE";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <style >
        .fondo {
             background-image: url("/img/pp.jpg");
            background-size: cover;
            background-position: center;
            height: 100vh;
            width: 100%;
            align-items: center;
            justify-content: center;
        }
    </style>

</head>

<body class="fondo">
    <div class="bg-white container w-75 bg-primary mt-5 rounded shadow">
        <div class="row alingn-items-stretch">
            <div class="col bg d-done d-lg-block col-md-5 col-lg-5 col-xl6 rounded">
                <img src="~/img/Captura de pantalla 2024-10-13 104807.png" />
            </div>
            <div class="col bg-white p-5 rounded-end">
                <div class="text-end">
                    <img src="~/img/LOGONEXU.png" width="48" alt="">
                </div>

                <h2 class="fw-bold text-center py-5">BIENVENIDO</h2>

                <form asp-action="Login" asp-controller="Usuario" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-4">
                        <label asp-for="Correo" for="Correo" class="form-label">Correo electrónico</label>
                        <input asp-for="Correo" name="Correo" type="email" class="form-control">
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Contrasena" for="Contrasena" class="form-label">Contraseña</label>
                        <input asp-for="Contrasena" name="Contrasena" class="form-control">
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input type="checkbox" name="connected" class="form-check-input">
                        <label for="connected" class="form-check-label">Mostrar contraseña</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button> 
                    </div>
                </form>
                     
                <div class="my-03">
                    <span>no tienes cuenta? <a asp-action="Registro" asp-controller="Home">Registrate</a></span> <br>
                     <span><a href="#">Recuperar Password</a></span>
                </div>

                <div class="container w-100 my-5">
                    <div class="row text-center">
                        <div class="col-12">Iniciar Sesión</div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <button class="btn btn-outline-primary w-100 my-1">
                                <div class="row  aling.item-center">
                                    <div class="col-2 d-none d-md-block">
                                        <img src="img/th.jpg" width="32" alt="">
                                    </div>

                                    <div class="col-12 col-md-10 text-center">
                                        Facebook
                                    </div>
                                </div>
                            </button>
                        </div>

                        <div class="col">
                            <div class="col">
                                <button class="btn btn-outline-danger  w-100 my-1">
                                    <div class="row  aling.item-center">
                                        <div class="col-2 d-none d-md-block">
                                            <img src="img/google-logo-png-open-2000.png" width="32" alt="">
                                        </div>

                                        <div class="col-12 col-md-10 text-center">
                                            Google
                                        </div>

                                    </div>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>