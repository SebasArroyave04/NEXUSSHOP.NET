@model ProductosModel

@{
    Layout = null;
    ViewData["Title"] = "pagina de productos";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Productos</title>
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="MenuUsuario" asp-controller="Home">NEXUSHOP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offc0anvasNavbarLabel">Menú</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="d-grid">
                            <a class="btn" aria-current="page" asp-action="Productos" asp-controller="Home">Productos</a>
                        </li>
                        <br />
                        <div class="d-grid">
                            <a class="btn" aria-current="page" asp-action="Contactanos" asp-controller="Home">Contactanos</a>
                        </div>
                        <br />
                        <div class="d-grid">
                            <a class="btn" aria-current="page" asp-action="#" asp-controller="Home">Pro</a>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</head>

<style>
    body {
        background-image: url("/img/pp.jpg");
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<body class="fondo-imagen text-white d-flex justify-content-center align-items-center">
    <div class="bg-white p-5 rounded-5 shadow" style="width: 30rem;">
        <div class="text-dark text-center fs-1 fw-bold">Productos</div>

        <form asp-action="Productos" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mt-4">
                <input asp-for="codigo" class="form-control bg-light" type="text" placeholder="Código" aria-label="Codigo" required>
            </div>

            <div class="input-group mt-4">
                <input asp-for="marca" class="form-control bg-light" type="text" placeholder="Marca" aria-label="Marca" required>
            </div>

            <div class="input-group mt-4">
                <input asp-for="modelo" class="form-control bg-light" type="text" placeholder="Modelo" aria-label="Modelo" required>
            </div>

            <div class="input-group mt-2">
                <input asp-for="nombre" class="form-control bg-light" type="text" placeholder="Nombre" aria-label="Nombre" required>
            </div>

            <div class="input-group mt-2">
                <textarea asp-for="descripcion" class="form-control bg-light" placeholder="Descripción" aria-label="Descripcion" required></textarea>
            </div>

            <div class="input-group mt-2">
                <input asp-for="precio" class="form-control bg-light" type="text" placeholder="Precio Venta" aria-label="PrecioV" required>
            </div>

            <div class="input-group mt-2">
                <input asp-for="unidades" class="form-control bg-light" type="text" placeholder="Unidades" aria-label="Unidades" required>
            </div>

            <div class="input-group mb-2">
                <select class="form-control" asp-for="estado" asp-items="Html.GetEnumSelectList<EstadoProducto>()"></select>
            </div>

            <div class="input-group mb-2">
                <select class="form-control" asp-for="accesorios" asp-items="Html.GetEnumSelectList<AccesoriosModel>()"></select>
            </div>

            <div class="input-group mt-2">
                <input asp-for="ImageFile" class="form-control bg-light" type="file" required>
            </div>

            <div class="container fs-1 mt-4 d-flex justify-content-around">
                <input class="btn btn-outline-success" type="submit" value="Guardar">
                <input class="btn btn-outline-danger" type="button" value="Volver" onclick="window.history.back();">
            </div>
        </form>
    </div>

    <script>
        document.querySelector('.toggler-btn').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('show');
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>